# Server Configuration
PORT=8080
ENVIRONMENT=development

#############################################################################
# Database Configuration (PostgreSQL/Supabase)
#############################################################################
# For local development, use localhost or Docker PostgreSQL
# For production with Supabase:
#   - Direct connection: db.xxxxxxxxxxxxx.supabase.co
#   - Pooler connection: aws-0-ap-southeast-1.pooler.supabase.com (for Cloud Run)
#
# To get your Supabase connection string:
#   1. Go to: https://supabase.com/dashboard/project/_/settings/database
#   2. Copy the connection string from "Connection string" section
#   3. Extract the host, port, user, password, and database name
#############################################################################
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=cpls_db

#############################################################################
# Supabase Configuration
#############################################################################
# Get these values from your Supabase project settings:
#   1. Go to: https://supabase.com/dashboard/project/_/settings/api
#   2. Copy the Project URL, anon key, service_role key
#   3. Get JWT secret from: https://supabase.com/dashboard/project/_/settings/api (JWT Settings)
#############################################################################
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_JWT_SECRET=your-jwt-secret

#############################################################################
# Admin Configuration
#############################################################################
# Default admin credentials (only used if no admin users exist)
# CHANGE THESE IN PRODUCTION!
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=your-secure-password

# Require JWT authentication for API endpoints
# Set to "true" to require Supabase JWT token for all API calls
REQUIRE_API_AUTH=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Vietnamese Stock Market Data APIs
SSI_API_KEY=
VNDIRECT_API_KEY=
TCBS_API_KEY=

# Trading Configuration
DEFAULT_COMMISSION_RATE=0.0015
DEFAULT_TAX_RATE=0.001

# Scheduler Configuration
ENABLE_SCHEDULER=true

# Vercel/Deployment Configuration
GIN_MODE=release
ALLOWED_ORIGINS=https://your-frontend-domain.com