# Server Configuration
PORT=8080
ENVIRONMENT=development

#############################################################################
# CONNECTION MODE: Choose ONE of the following options
#############################################################################
#
# OPTION 1: SUPABASE-ONLY MODE (Recommended for simple admin login)
# -------------------------------------------------------------------
# Leave DB_HOST empty and only set SUPABASE_* variables.
# The system will use Supabase REST API to query admin_users table.
# This is the simplest setup - only need 3 variables!
#
# OPTION 2: DIRECT DATABASE CONNECTION MODE
# -------------------------------------------------------------------
# Set DB_HOST and other DB_* variables for direct PostgreSQL connection.
# This enables full functionality including migrations, scheduler, etc.
#
#############################################################################

#############################################################################
# OPTION 1: Supabase-Only Mode (Simple Setup)
#############################################################################
# Only need these 3 variables to login to admin panel!
# Get values from: https://supabase.com/dashboard/project/_/settings/api
#############################################################################
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

#############################################################################
# OPTION 2: Direct Database Connection (Full Functionality)
#############################################################################
# Uncomment and set these for direct database connection
# Get connection details from: https://supabase.com/dashboard/project/_/settings/database
#############################################################################
# DB_HOST=db.xxxxxxxxxxxxx.supabase.co
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your-database-password
# DB_NAME=postgres

#############################################################################
# Optional: JWT Secret for API authentication
#############################################################################
# SUPABASE_JWT_SECRET=your-jwt-secret

# Require JWT authentication for API endpoints
# Set to "true" to require Supabase JWT token for all API calls
REQUIRE_API_AUTH=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Vietnamese Stock Market Data APIs
SSI_API_KEY=
VNDIRECT_API_KEY=
TCBS_API_KEY=

# Trading Configuration
DEFAULT_COMMISSION_RATE=0.0015
DEFAULT_TAX_RATE=0.001

# Scheduler Configuration
ENABLE_SCHEDULER=true

# Vercel/Deployment Configuration
GIN_MODE=release
ALLOWED_ORIGINS=https://your-frontend-domain.com