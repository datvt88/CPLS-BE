{
  "version": 2,
  "name": "cpls-backend",
  "builds": [
    {
      "src": "main.go",
      "use": "@vercel/go",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/main.go"
    },
    {
      "source": "/health",
      "destination": "/main.go"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/main.go"
    },
    {
      "source": "/(.*)",
      "destination": "/main.go"
    }
  ],
  "env": {
    "PORT": "8080",
    "ENVIRONMENT": "production",
    "GIN_MODE": "release"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "$ALLOWED_ORIGINS"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ],
  "regions": ["sin1"]
}
